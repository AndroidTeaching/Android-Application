    android:layout_height="match_parent">
    <TableRow >
        <TextView android:text="Fila 1, Col 1"
            android:padding="8dp"/>
        <TextView android:text="Fila 2, Col 1"
            android:padding="8dp"/>
    </TableRow>
    <TableRow>
        <TextView android:text="Fila 2, Col 1"
            android:padding="8dp"/>
        <TextView android:text="Fila 2, Col 2"
            android:padding="8dp"
